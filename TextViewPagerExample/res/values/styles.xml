<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light.NoTitleBar">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. Independent of API level. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowContentOverlay">@null</item>

        <!-- Uncomment to see how you can style BasicActivity without providing a TextView layout -->
        <!-- <item name="textViewPagerStyle">@style/textViewPager</item> -->
    </style>
    
    <style name="textViewPager">
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:scrollbars">none</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:typeface">serif</item>
    </style>

</resources>
